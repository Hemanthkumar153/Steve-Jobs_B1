package Java_Exam;
import java.util.Scanner;
public class Pattern3 {
	public static void main(String[] args) {
		int i;
		int j;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the input : ");
		int n = sc.nextInt();
		
		
		for (i = 1; i <= n; i++) {
		  for (j = 1; j <= i-1; j++) {
		  System.out.print("*");
	    }
		  System.out.println();
		}
  }
}
		
	


